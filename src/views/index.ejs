<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>    
    <title>NINNA Regaleria</title>
    <link rel="stylesheet" href="/css/styles-index.css">
</head>
<body>
    <%- include('./partials/header') %>
    <main>
        <div class="carrusel">
            <div class="carrusel-items">
                <div class="carrusel-item">
                    <img src="/images/catena-zapata.png" alt="Vino">
                </div>
                <div class="carrusel-item">
                    <img src="/images/los-intocables.png" alt="Vino">
                </div>
                <div class="carrusel-item">
                    <img src="/images/luigi-bosca.png" alt="Vino">
                </div>
                <div class="carrusel-item">
                    <img src="/images/piattelli.png" alt="Vino">
                </div>
                <div class="carrusel-item">
                    <img src="/images/red-label.png" alt="Vino">
                </div>
                <div class="carrusel-item">
                    <img src="/images/el-enemigo-malbec-2019.png" alt="Vino">
                </div>
                <div class="carrusel-item">
                    <img src="/images/catena-zapata.png" alt="Vino">
                </div>
                <div class="carrusel-item">
                    <img src="/images/los-intocables.png" alt="Vino">
                </div>
                <div class="carrusel-item">
                    <img src="/images/luigi-bosca.png" alt="Vino">
                </div>
                <div class="carrusel-item">
                    <img src="/images/piattelli.png" alt="Vino">
                </div>
                <div class="carrusel-item">
                    <img src="/images/red-label.png" alt="Vino">
                </div>
                <div class="carrusel-item">
                    <img src="/images/el-enemigo-malbec-2019.png" alt="Vino">
                </div>
            </div>
        </div>
        <h3>Sugerencias</h3>
        <% for (let i = 0; i < products.length; i++) { %>
        <% if (products[i].ProductSegmentation.name === 'Sugerencias'){ %>
        <section class="categories">
            <div class="products">
                <article>
                    <a href="/productDetail/<%= products[i].id %>">
                    <img src="/images/products/<%= products[i].image %>" class="product_img">
                    <div class="main-article">
                        <p class="price"><%= products[i].price %></p>
                        <p class="discount"><%= products[i].discount %></p>
                        <h4 class="store"><%= products[i].Stores ? products[i].Stores.name : 'Sin tienda' %></h4>
                        <h4 class="grape"><%= products[i].TypeOfBarrel ? products[i].TypeOfBarrel.name : 'Sin barril' %></h4>
                    </div>
                    </a>
                </article>
            <% } %>
            </div>
            <% } %>
        <h3>Ofertas</h3>
        <% for (let i = 0; i < products.length; i++) { %>
            <% if (products[i].ProductSegmentation.name === 'Ofertas'){ %>
            <section class="categories">
                <div class="products">
                    <article>
                        <a href="/productDetail/<%= products[i].id %>">
                        <img src="/images/products/<%= products[i].image %>" class="product_img">
                        <div class="main-article">
                            <p class="price"><%= products[i].price %></p>
                            <p class="discount"><%= products[i].discount %></p>
                            <h4 class="store"><%= products[i].Stores ? products[i].Stores.name : 'Sin tienda' %></h4>
                            <h4 class="grape"><%= products[i].TypeOfBarrel ? products[i].TypeOfBarrel.name : 'Sin barril' %></h4>
                        </div>
                        </a>
                    </article>
                <% } %>
                </div>
                <% } %>
    </main>
    <%- include('./partials/footer') %>
</body>
</html>