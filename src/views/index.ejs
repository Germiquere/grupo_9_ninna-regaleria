<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>    
    <title>NINNA Regaleria</title>
    <link rel="stylesheet" href="/css/styles-index.css">
</head>
<body>
    <%- include('./partials/header') %>
    <main>
        <section class="carrusel">
            <img src="/images/vinedos.jpg" alt="ViÃ±edos">
        </section>
        <h3>Sugerencias</h3>
        <section class="categories">
            <div class="products">
                <% locals.sugerencias && sugerencias.forEach(product => { %>
                <article>
                    <a href="/productDetail/<%= product.id %>">
                    <img src="/images/<%= product.image %>" class="product_img">
                    <div class="main-article">
                        <p class="price"><%= product.price %></p>
                        <p class="discount"><%= product.discount %></p>
                        <h4 class="store"><%= product.name %></h4>
                        <h4 class="grape"><%= product.typeOfBarrel %></h4>
                        <div>
                            <P><h5>Calificacion</h5><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="far fa-star"></i></P>
                        </div>
                    </div>
                    </a>
                </article>
            <% }) %>
            </div>
        <h3>Ofertas</h3>
        <section class="categories">
            <div class="products">
                <% locals.ofertas && ofertas.forEach(product => { %>
                    <article>
                        <a href="/productDetail/<%= product.id %>">
                            <img src="/images/<%= product.image %>" class="product_img">
                            <div class="main-article">
                                <p class="price">
                                    <%= product.price %>
                                </p>
                                <p class="discount"><%= product.discount %></p>
                                <h4 class="store">
                                    <%= product.store %>
                                </h4>
                                <h4 class="grape">
                                    <%= product.typeOfBarrel %>
                                </h4>
                                <div>
                                    <P>
                                    <h5>Calificacion</h5><i class="fas fa-star"></i><i class="fas fa-star"></i><i
                                        class="fas fa-star"></i><i class="fas fa-star"></i><i class="far fa-star"></i></P>
                                </div>
                            </div>
                        </a>
                    </article>
                    <% }) %>
            </div>
    </main>
    <%- include('./partials/footer') %>
</body>
</html>